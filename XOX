<body>

<h1>Tic Tac Toe</h1>
<div class="turn-indicator" id="turnIndicator">Your Turn (X)</div>
<div class="board" id="board"></div>
<div class="winner" id="winner"></div>
<button onclick="resetGame()">Restart Game</button>

<script>
  const board = document.getElementById('board');
  const winnerDisplay = document.getElementById('winner');
  const turnIndicator = document.getElementById('turnIndicator');

  let gameState = ["", "", "", "", "", "", "", "", ""];
  const player = 'X';
  const computer = 'O';
  let playerTurn = true; // track whose turn

  const winningConditions = [
    [0,1,2], [3,4,5], [6,7,8],
    [0,3,6], [1,4,7], [2,5,8],
    [0,4,8], [2,4,6]
  ];

  function handleCellClick(index) {
    if(gameState[index] !== "" || checkWinner() || !playerTurn) return;

    gameState[index] = player;
    renderBoard();

    if(checkWinner()) {
      winnerDisplay.textContent = "You win!";
      turnIndicator.textContent = "";
    } else if(!gameState.includes("")) {
      winnerDisplay.textContent = "It's a draw!";
      turnIndicator.textContent = "";
    } else {
      playerTurn = false;
      turnIndicator.textContent = "Computer's Turn (O)";
      setTimeout(computerMove, 500);
    }
  }

  function computerMove() {
    const emptyCells = gameState.map((val, idx) => val === "" ? idx : null).filter(val => val !== null);
    if(emptyCells.length === 0) return;

    let move = null;

    // Check if computer can win
    for(let i of emptyCells){
      gameState[i] = computer;
      if(checkWinner() === computer) { move = i; }
      gameState[i] = "";
    }

    // Block player win
    if(move === null){
      for(let i of emptyCells){
        gameState[i] = player;
        if(checkWinner() === player) { move = i; }
        gameState[i] = "";
      }
    }

    // Random move if no block/win
    if(move === null){
      move = emptyCells[Math.floor(Math.random() * emptyCells.length)];
    }

    gameState[move] = computer;
    renderBoard();

    if(checkWinner()) {
      winnerDisplay.textContent = "Computer wins!";
      turnIndicator.textContent = "";
    } else if(!gameState.includes("")) {
      winnerDisplay.textContent = "It's a draw!";
      turnIndicator.textContent = "";
    } else {
      playerTurn = true;
      turnIndicator.textContent = "Your Turn (X)";
    }
  }

  function checkWinner() {
    for(const condition of winningConditions){
      const [a,b,c] = condition;
      if(gameState[a] && gameState[a] === gameState[b] && gameState[a] === gameState[c]){
        return gameState[a];
      }
    }
    return null;
  }

  function renderBoard() {
    board.innerHTML = '';
    gameState.forEach((cell, index) => {
      const cellDiv = document.createElement('div');
      cellDiv.classList.add('cell');
      if(cell) cellDiv.classList.add(cell); // add X or O class for color
      cellDiv.textContent = cell;
      cellDiv.addEventListener('click', () => handleCellClick(index));
      board.appendChild(cellDiv);
    });
  }

  function resetGame() {
    gameState = ["", "", "", "", "", "", "", "", ""];
    winnerDisplay.textContent = '';
    playerTurn = true;
    turnIndicator.textContent = "Your Turn (X)";
    renderBoard();
  }

  renderBoard();
</script>

</body>
