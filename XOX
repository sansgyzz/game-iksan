    margin-bottom: 20px;
    font-size: 1.2rem;
    font-weight: 500;
    color: #007bff; /* blue for player */
    transition: color 0.3s;
  }

  .board {
    display: grid;
    grid-template-columns: repeat(3, 100px);
    grid-template-rows: repeat(3, 100px);
    gap: 12px;
    background: #fff;
    padding: 12px;
    border-radius: 20px;
    box-shadow: 0 8px 15px rgba(0,0,0,0.1);
  }

  .cell {
    background: #e3f2fd; /* light pastel blue */
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
